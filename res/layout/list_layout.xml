<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
 
    <TextView android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" 
        android:text="@string/blacklist_title" />
 
    <EditText android:id="@+id/input_field"
        android:singleLine="true"
        android:inputType="text"
        android:layout_width="240dp"
        android:layout_height="wrap_content" />
 
    <Button android:id="@+id/btnAdd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_item"
        android:layout_toRightOf="@id/input_field" />
 
    <TextView android:id="@android:id/empty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_field"
        android:gravity="center_horizontal" />
 
    <ListView android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_field"
        android:choiceMode="multipleChoice" >
    </ListView>
 
    <Button android:id="@+id/btnDel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/del_selected_items" />
</RelativeLayout>
